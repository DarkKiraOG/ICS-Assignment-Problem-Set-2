(* The Ackermann function is a fascinating function which grows
very rapidly.
The function is defined as:
A(0, n) = n + 1
A(m + 1, 0) = A(m, 1)

A(m + 1, n + 1) = A(m, A(m + 1, n)) 

*)

let rec ack a b =
  if a = 0 then b + 1
  else if b = 0 then ack (a-1) 1
  else ack (a-1) (ack a (b-1))
;;
  
let result = ack 3 4;;

print_int result;;
