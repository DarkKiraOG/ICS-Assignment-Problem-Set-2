let x = 3;;
let n = 4;;
let m = 5;;


let rec exponential power num = 
    if power = 0 then 1  
    else num * exponential (power - 1) num
;;


let even_odd power number =
    if (power mod 2) = 0 then 
        let power = power / 2 in 
        let result = exponential power number in
        result * result  
    else 
        let power = (power - 1) / 2 in 
        let result = exponential power number in
        number * result * result  
;;

let a = even_odd m x;;
print_int a;;
